<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Medium List</title>
</head>
<body>
  <h1>My mediums:</h1>
  <% if(error) { %>
    <h2><%= error %></h2>
  <% } %>
  <ul>
    <% mediums.forEach(function(medium) { %>
      <li>
        <a href= "/mediums/<%= medium._id %>"><%= medium.text %></a>
        <form 
          action="/mediums/<%= medium._id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">X</button>
        </form>
      </li>
    <% }) %>
  </ul>
  <a href="/mediums/new">Add new medium</a>
</body>
</html>